node {

    def python

    sh 'mkdir -p ./_ci_repository'
    dir('./_ci_repository') {
        git url: 'https://github.com/ihiji/ci', credentialsId: 'ihiji-chef-api-key-as-uname-pw'
        dir ('./jenkins') {
            python = fileLoader.load('./python.groovy')
            python.repo = '$PROJECT_REPO'
            python.production = true
            python.loadFiles()
        }
    }

    checkout scm

    try {
        stage('Build') {
            python.build()
        }

        stage('Test') {
            python.test()
        }

        stage('Deploy') {
            python.deploy()
        }
    }
    catch (e) {
        currentBuild.result = 'FAILED'
        throw e as java.lang.Throwable
    }
    finally {
        python.checkBuild()
    }
}
